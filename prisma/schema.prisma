generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = ["native", "darwin-arm64", "linux-arm64-openssl-3.0.x", "debian-openssl-3.0.x", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  email    String  @unique
  password String?

  name    String @default("Not defined")
  picture String @default("/uploads/no-user-image.png")
  
  // Relationships of visual-analyser-api project
  photos   Photo[]
  comments Comment[]

  // Relationships with another project (multi e shop api project) user model
  stores Store[]

  favorites Product[]
  reviews   Review[]
  orders    Order[]

  @@map("user")
}

model Photo {
  id        String    @id @default(uuid())
  title     String
  // Stored URL of the image in Supabase Storage
  imageUrl  String
  // Geotagging data: Latitude and Longitude
  latitude  Float
  longitude Float
  // The user who uploaded the photo
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  // Optional AI-generated description
  aiDescription String?
  
  comments  Comment[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comment {
  id        String   @id @default(uuid())
  text      String   @db.Text
  
  // Link to the user who created the comment
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  // Link to the photo the comment is on
  photoId   String
  photo     Photo    @relation(fields: [photoId], references: [id])
  
  createdAt DateTime @default(now())
}
